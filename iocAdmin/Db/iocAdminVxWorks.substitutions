#==============================================================================
#
# Abs:  IOC Administration Records for RTOS IOCs
#
# Name: iocAdmin.substitutions
#
#==============================================================================
#
file ioc.template
{
pattern { IOCNAME, SEP , TODFORMAT           }
	{ "$(IOC)"  , "\$(SEP=:)", "%m/%d/%Y %H:%M:%S" }
}
file iocGeneralTime.template
{
pattern { IOCNAME, SEP }
	{ "$(IOC)" , "\$(SEP=:)" }
}
file iocRTOS.template
{
pattern { IOCNAME, SEP , SYS_MBUF_FLNK     }
	{ "$(IOC)"  , "\$(SEP=:)", "$(IOC)\$(SEP=:)CLUST_1_0_0"}
}
file iocVxWorksOnly.template
{
pattern { IOCNAME, SEP , DAT_MBUF_FLNK     }
	{ "$(IOC)"  , "\$(SEP=:)", "$(IOC)\$(SEP=:)CLUST_0_0_0"}
}
file iocEnvVar.template
{
pattern { IOCNAME, SEP, ENVNAME      , ENVVAR                          , ENVTYPE}
	{ "$(IOC)" , "\$(SEP=:)", CA_ADDR_LIST , EPICS_CA_ADDR_LIST              , epics  } 
	{ "$(IOC)" , "\$(SEP=:)", CA_CONN_TIME , EPICS_CA_CONN_TMO               , epics  } 
	{ "$(IOC)" , "\$(SEP=:)", CA_AUTO_ADDR , EPICS_CA_AUTO_ADDR_LIST         , epics  }
	{ "$(IOC)" , "\$(SEP=:)", CA_RPTR_PORT , EPICS_CA_REPEATER_PORT          , epics  }
	{ "$(IOC)" , "\$(SEP=:)", CA_SRVR_PORT , EPICS_CA_SERVER_PORT            , epics  }
	{ "$(IOC)" , "\$(SEP=:)", CA_MAX_ARRAY , EPICS_CA_MAX_ARRAY_BYTES        , epics  }
	{ "$(IOC)" , "\$(SEP=:)", CA_SRCH_TIME , EPICS_CA_MAX_SEARCH_PERIOD      , epics  }
	{ "$(IOC)" , "\$(SEP=:)", CA_BEAC_TIME , EPICS_CA_BEACON_PERIOD          , epics  }
	{ "$(IOC)" , "\$(SEP=:)", TIMEZONE     , EPICS_TIMEZONE                  , epics  }
	{ "$(IOC)" , "\$(SEP=:)", TS_NTP_INET  , EPICS_TS_NTP_INET               , epics  }
	{ "$(IOC)" , "\$(SEP=:)", IOC_LOG_PORT , EPICS_IOC_LOG_PORT              , epics  }
	{ "$(IOC)" , "\$(SEP=:)", IOC_LOG_INET , EPICS_IOC_LOG_INET              , epics  }
}
file iocCluster.template
{
#                   Pool   Size
pattern { IOCNAME, SEP ,  P   ,  S   , TYPE , FLNK               }
# Data Pool
	{ "$(IOC)"  , "\$(SEP=:)",  0   ,  0   , DAT  , "$(IOC)\$(SEP=:)CLUST_0_1_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  0   ,  1   , DAT  , "$(IOC)\$(SEP=:)CLUST_0_2_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  0   ,  2   , DAT  , "$(IOC)\$(SEP=:)CLUST_0_3_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  0   ,  3   , DAT  , "$(IOC)\$(SEP=:)CLUST_0_4_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  0   ,  4   , DAT  , "$(IOC)\$(SEP=:)CLUST_0_5_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  0   ,  5   , DAT  , "$(IOC)\$(SEP=:)CLUST_0_6_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  0   ,  6   , DAT  , "$(IOC)\$(SEP=:)CLUST_0_7_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  0   ,  7   , DAT  , ""                 }
# System Pool
	{ "$(IOC)"  , "\$(SEP=:)",  1   ,  0   , SYS  , "$(IOC)\$(SEP=:)CLUST_1_1_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  1   ,  1   , SYS  , "$(IOC)\$(SEP=:)CLUST_1_2_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  1   ,  2   , SYS  , "$(IOC)\$(SEP=:)CLUST_1_3_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  1   ,  3   , SYS  , "$(IOC)\$(SEP=:)CLUST_1_4_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  1   ,  4   , SYS  , "$(IOC)\$(SEP=:)CLUST_1_5_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  1   ,  5   , SYS  , "$(IOC)\$(SEP=:)CLUST_1_6_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  1   ,  6   , SYS  , "$(IOC)\$(SEP=:)CLUST_1_7_0" }
	{ "$(IOC)"  , "\$(SEP=:)",  1   ,  7   , SYS  , ""                 }
}
